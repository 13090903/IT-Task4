<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="Products" FontSize="22" Background="AliceBlue" HorizontalAlignment="Left" Height="300" Margin="10,0,10,10" VerticalAlignment="Top" Width="760"/>
        <Button x:Name="BuyButton" FontSize="22" Background="LightGreen" Content="Купить" HorizontalAlignment="Left" Margin="10,320,10,0" VerticalAlignment="Top" Width="760" Click="BuyClick"/>
        <Label Content="Покупатель:" Foreground="DarkBlue" FontSize="22" HorizontalAlignment="Left" Margin="10,350,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CustName" FontSize="22" Foreground="DarkBlue" HorizontalAlignment="Left" Margin="150,355,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Адрес:" Foreground="DarkBlue" FontSize="22" HorizontalAlignment="Left" Margin="300,350,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CustAddress" FontSize="22" Foreground="DarkBlue" HorizontalAlignment="Left" Margin="400,355,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
